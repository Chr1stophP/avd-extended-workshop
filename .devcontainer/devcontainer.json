// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "avd_extended_workshop",
	"build": {
        "dockerfile": "Dockerfile",
	"args": {
	    "_AVD_VERSION": "4.1.0",
        "_CLAB_VERSION": "0.37.1"
	}
    },
    "onCreateCommand": "sudo apt-get update; sudo apt-get install -y chromium",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:1": {
            "version": "latest"
        },
        // add sshd to support gh cli codespace cp
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        }
    },
    // increase host requirements to match cLab size
    "hostRequirements": {
        "cpus": 8,
        "memory": "16gb",
        "storage": "64gb"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                // install Marp extension for VScode to build slides
                "marp-team.marp-vscode",
                // Github Copilot
                "github.copilot",
                // python
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.isort",
                // git essentials
                "piotrpalarz.vscode-gitignore-generator",
                "mhutchie.git-graph",
                "eamodio.gitlens",
                "donjayamanne.githistory",
                // spell checker
                "streetsidesoftware.code-spell-checker",
                // errors and highlighters
                "IgorSbitnev.error-gutters",
                "fabiospampinato.vscode-highlight",
                "mechatroner.rainbow-csv",
                // excalidraw
                "pomdtr.excalidraw-editor",
                // markdown
                "yzhang.markdown-all-in-one",
                "bierner.markdown-checkbox",
                "telesoho.vscode-markdown-paste-image",
                "yzane.markdown-pdf",
                "bierner.markdown-mermaid",
                "AlanWalk.markdown-toc",
                "DavidAnson.vscode-markdownlint",
                // various tools
                "tuxtina.json2yaml",
                "vscode-icons-team.vscode-icons",
                "tomoki1207.pdf",
                "mutantdino.resourcemonitor"
            ]
        }
    }
}
